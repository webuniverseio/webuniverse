<div itemscope itemtype="http://schema.org/<%- schema.type %>">
	<article class="content-entry" itemprop="<%- schema.content %>">
		<% if (page.image) { %>
		<div class="article__image-wrapper">
			<picture>
				<!--[if IE 9]><video style="display: none;"><![endif]-->
				<source srcset="<%- page.image %>" media="(min-width: 600px)">
				<!--[if IE 9]></video><![endif]-->
				<img srcset="<%- page.imageSmall %>" alt="<%= page.title %>">
			</picture>
			<% if (page.copyright) { %>
			<span class="image-copyright">&copy; <%- page.copyright %></span>
			<% } %>
		</div>
		<% } %>
		<% if (typeof headless === 'undefined') { %>
		<h1 itemprop="name"><%= page.title %></h1>
		<% } %>
		<%- page.content %>
	</article>
</div>